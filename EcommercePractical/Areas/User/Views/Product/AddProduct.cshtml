@model Product

<form method="post" asp-action="AddProduct" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <input asp-for="ImageUrl" hidden />

    <div class="border p-3 mt-4" style="background-color:lightgray;">
        <div class="row pb-2">
            <h2 class="text-info">@(Model.Id != 0 ? "Update" : "Create") Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-2">
            <label>IsActive</label>
            <input type="checkbox" asp-for="IsActive" />

        </div>

        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="file" id="uploadBox" name="file" class="form-control" />
        </div>
        @if (Model.Id != 0)
        {
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        }
        else
        {
            <button type="submit" onclick="return ValidateInput()" class="btn btn-info" style="width:150px">Create</button>
        }
        <a asp-area="User" asp-controller="User" asp-action="Index" class="btn btn-info" style="width:150px">
            Back To List
        </a>
    </div>
</form>

@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function ValidateInput() {

            if (document.getElementById("uploadBox").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please Upload an Image',
                });
                return false;
            }
            return true;
        }
    </script>
}



